server {
listen   80;
server_name  slim.dev;
root %TRAVIS_BUILD_DIR%/slim.dev/public;
access_log /var/log/nginx/slim.dev.access.log;
error_log /var/log/nginx/slim.dev.error.log;

index  index.php;

location / {
try_files $uri $uri/ /index.php?$uri&$args;
}

# static content
location ~* ^.+\.(wsf|xml|pdf|doc|jpg|jpeg|gif|css|png|js|ico|ttf|eot|otf|svg)$ {
# access_log        off;
expires           15d;
}

location ~ \.php$  {
# With php5-fpm:
fastcgi_pass unix:/var/run/php5-fpm.sock
fastcgi_index index.php;
include fastcgi_params;
fastcgi_param  SCRIPT_FILENAME $document_root/index.php;
#uncomment when running via https
#fastcgi_param HTTPS on;
}

gzip on;
gzip_comp_level 2;
gzip_proxied any;
gzip_min_length  1000;
gzip_disable     "MSIE [1-6]\."
gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

}